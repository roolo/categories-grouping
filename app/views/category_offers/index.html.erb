<h1>Listing Category &ndash; offers</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Name</th>
    <th colspan="3">Actions</th>
  </tr>

<% @category_offers.each do |category_offer| %>
  <tr>
    <td><%= category_offer.name %></td>
    <td><%= link_to 'Show', category_offer %></td>
    <td><%= link_to 'Edit', edit_category_offer_path(category_offer) %></td>
    <td><%= link_to 'Destroy', category_offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category offer', new_category_offer_path %>
